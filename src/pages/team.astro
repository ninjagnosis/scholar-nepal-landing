---
import BaseLayout from "../layouts/BaseLayout.astro";
import enTeam from "../i18n/en/team.json";
import neTeam from "../i18n/ne/team.json";

const t = Astro.currentLocale === "ne" ? neTeam : enTeam;
---

<BaseLayout title={t.title}>
    <section class="py-24 bg-white relative">
        <div class="absolute inset-0 bg-grid-pattern opacity-[0.03]"></div>
        <div class="container container-custom text-center mb-16 relative z-10">
            <span
                class="text-blue-600 font-semibold tracking-wider uppercase mb-2 block"
                >{t.subtitle}</span
            >
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                {t.title}
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                {t.description}
            </p>
        </div>

        <div
            class="container container-custom grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 relative z-10"
        >
            {
                t.members.map((member) => (
                    <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 group text-center p-8 border border-gray-100 hover:-translate-y-2">
                        <div class="relative w-32 h-32 mx-auto mb-6">
                            <div class="absolute inset-0 bg-blue-100 rounded-full transform rotate-6 group-hover:rotate-12 transition-transform" />
                            <img
                                src={member.image}
                                alt={member.name}
                                class="w-32 h-32 rounded-full object-cover relative z-10 border-4 border-white shadow-md group-hover:scale-105 transition-transform"
                            />
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 mb-1">
                            {member.name}
                        </h3>
                        <p class="text-blue-600 font-medium mb-4 text-sm uppercase tracking-wide">
                            {member.role}
                        </p>
                        <div class="h-px w-12 bg-gray-200 mx-auto mb-4" />
                        <p class="text-sm text-gray-500">
                            {member.qualification}
                        </p>
                    </div>
                ))
            }
        </div>
    </section>
</BaseLayout>
