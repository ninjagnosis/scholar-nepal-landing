---
import BaseLayout from "../layouts/BaseLayout.astro";
import enTeam from "../i18n/en/team.json";
import neTeam from "../i18n/ne/team.json";
import GlobalCTA from "../components/common/GlobalCTA.astro";

const t = Astro.currentLocale === "ne" ? neTeam : enTeam;
---

<BaseLayout title={t.title}>
    <section class="py-24 bg-white relative">
        <div class="absolute inset-0 bg-grid-pattern opacity-[0.03]"></div>
        <div class="container container-custom text-center mb-16 relative z-10">
            <span
                class="text-blue-600 font-semibold tracking-wider uppercase mb-2 block"
                >{t.subtitle}</span
            >
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
                {t.title}
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">
                {t.description}
            </p>
        </div>

        <div
            class="container container-custom grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 relative z-10"
        >
            {
                t.members.map((member) => (
                    <div class="bg-white overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 group p-8 border border-gray-100 hover:-translate-y-2 flex flex-col h-full">
                        <div class="flex flex-col items-center mb-6">
                            <div class="relative w-32 h-32 mb-6">
                                <div class="absolute inset-0 bg-blue-100 transform rotate-6 group-hover:rotate-12 transition-transform" />
                                <img
                                    src={member.image}
                                    alt={member.name}
                                    class="w-32 h-32 object-cover relative z-10 border-4 border-white shadow-md group-hover:scale-105 transition-transform"
                                />
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900 mb-1">
                                {member.name}
                            </h3>
                            <p class="text-blue-600 font-semibold text-sm uppercase tracking-wider mb-2">
                                {member.role}
                            </p>
                            <span class="text-sm font-medium text-gray-400 mb-4">
                                {member.qualification}
                            </span>
                            <div class="h-1 w-12 bg-blue-500 mb-6" />
                        </div>
                        <p class="text-gray-600 text-sm leading-relaxed text-center flex-grow italic">
                            {member.bio}
                        </p>
                    </div>
                ))
            }
        </div>
    </section>
    <GlobalCTA />
</BaseLayout>
