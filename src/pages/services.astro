---
import BaseLayout from '../layouts/BaseLayout.astro';
import enServices from '../i18n/en/services.json';
import neServices from '../i18n/ne/services.json';
import GlobalCTA from '../components/common/GlobalCTA.astro';

const t = Astro.currentLocale === 'ne' ? neServices : enServices;
---

<BaseLayout title={t.title}>
    <section class="bg-gradient-to-br from-blue-50 to-white py-12 md:py-24">
        <div class="container container-custom">
            <div class="text-center max-w-3xl mx-auto mb-16 animate-fade-in-up">
                <span class="text-blue-600 font-semibold tracking-wider text-sm uppercase mb-2 block">{t.subtitle}</span>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-gray-900 mb-6 leading-tight">{t.title}</h1>
                <p class="text-xl text-gray-600 leading-relaxed font-light">{t.description}</p>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
                {t.categories.map((category) => (
                    <div class="bg-white p-8 md:p-10 shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1 border border-gray-100 relative overflow-hidden group">
                        <!-- Decorative background blob -->
                        <div class="absolute -top-12 -right-12 w-24 h-24 bg-blue-50 group-hover:bg-blue-100 transition-colors duration-300"></div>
                        
                        <h2 class="text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-100 flex items-center relative z-10">
                            <span class="w-1.5 h-8 bg-gradient-to-b from-blue-600 to-blue-400 mr-4 shadow-sm"></span>
                            {category.title}
                        </h2>
                        
                        <ul class="space-y-4 relative z-10">
                            {category.items.map((item) => (
                                <li class="flex items-start text-gray-700 p-3 hover:bg-blue-50/50 transition-all duration-200 group/item">
                                    <div class="bg-blue-100 p-1 mr-4 flex-shrink-0 mt-0.5 group-hover/item:bg-blue-600 transition-colors">
                                        <svg class="w-4 h-4 text-blue-600 group-hover/item:text-white transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7" />
                                        </svg>
                                    </div>
                                    <span class="font-medium text-gray-800">{item}</span>
                                </li>
                            ))}
                        </ul>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    <GlobalCTA />
</BaseLayout>
