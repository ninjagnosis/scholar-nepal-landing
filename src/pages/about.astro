---
import BaseLayout from "../layouts/BaseLayout.astro";
import enAbout from "../i18n/en/about.json";
import neAbout from "../i18n/ne/about.json";
import GlobalCTA from "../components/common/GlobalCTA.astro";

const t = Astro.currentLocale === "ne" ? neAbout : enAbout;
---

<BaseLayout title={t.title}>
    <!-- Previous Hero Style -->
    <section class="py-24 bg-white relative overflow-hidden">
        <!-- Decorative elements -->
        <div class="absolute top-0 right-0 w-1/3 h-full bg-gray-50 -skew-x-12 transform translate-x-20 -z-10"></div>

        <div class="container container-custom">
            <div class="max-w-4xl mx-auto text-center animate-fade-in-up">
                <span class="text-blue-600 font-bold uppercase tracking-wider mb-4 block text-sm bg-blue-50 inline-block px-4 py-1">
                    {t.subtitle}
                </span>
                <h1 class="text-4xl md:text-5xl lg:text-7xl font-extrabold mb-8 text-gray-900 leading-tight">
                    {t.title}
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 leading-relaxed font-light max-w-3xl mx-auto">
                    {t.intro}
                </p>
                <div class="h-1.5 w-24 bg-blue-600 mx-auto mt-8"></div>
            </div>
        </div>
    </section>

    <!-- Background Section -->
    <section class="py-24 bg-white relative overflow-hidden">
        <!-- Floating decorative text -->
        <div class="absolute -left-20 top-20 text-[12rem] font-black text-gray-50 uppercase select-none -z-10 leading-none">
            History
        </div>
        
        <div class="container container-custom">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 items-start">
                <div class="lg:col-span-5 background-visual-reveal">
                    <h2 class="text-4xl md:text-5xl font-black text-gray-900 mb-8 tracking-tight">
                        {t.background.title}
                    </h2>
                    <div class="relative p-10 bg-blue-50/50 border-l-4 border-blue-600">
                        <svg class="absolute -top-4 -left-4 w-12 h-12 text-blue-600/20" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M14.017 21L14.017 18C14.017 16.895 14.912 16 16.017 16L19.017 16C19.569 16 20.017 15.552 20.017 15L20.017 8C20.017 7.448 19.569 7 19.017 7L15.017 7C14.465 7 14.017 7.448 14.017 8L14.017 10C14.017 10.552 13.569 11 13.017 11L10.017 11C9.465 11 9.017 10.552 9.017 10L9.017 8C9.017 6.895 9.912 6 11.017 6L19.017 6C20.122 6 21.017 6.895 21.017 8L21.017 15C21.017 16.105 20.122 17 19.017 17L17.017 17L17.017 21L14.017 21ZM5.017 21L5.017 18C5.017 16.895 5.912 16 7.017 16L10.017 16C10.569 16 11.017 15.552 11.017 15L11.017 8C11.017 7.448 10.569 7 10.017 7L6.017 7C5.465 7 5.017 7.448 5.017 8L5.017 10C5.017 10.552 4.569 11 4.017 11L1.017 11C0.465 11 0.017 10.552 0.017 10L0.017 8C0.017 6.895 0.912 6 2.017 6L10.017 6C11.122 6 12.017 6.895 12.017 8L12.017 15C12.017 16.105 11.122 17 10.017 17L8.017 17L8.017 21L5.017 21Z"></path>
                        </svg>
                        <p class="text-xl md:text-2xl text-blue-900 font-medium leading-relaxed italic">
                            "Committed to providing the best knowledge-based solutions and specialized expertise for sustainable development."
                        </p>
                    </div>
                </div>
                <div class="lg:col-span-7 space-y-8 text-gray-700 text-lg leading-relaxed text-justify background-text-reveal">
                    {t.background.paragraphs.map((p) => (
                        <p class="transition-all duration-700 hover:text-gray-900">{p}</p>
                    ))}
                </div>
            </div>
        </div>
    </section>

    <!-- Corporate Focus Section -->
    <section class="py-24 bg-gray-900 text-white relative overflow-hidden">
        <!-- Animated background gradients -->
        <div class="absolute top-0 right-0 w-full h-full overflow-hidden pointer-events-none">
            <div class="absolute -top-1/4 -right-1/4 w-1/2 h-1/2 bg-blue-600/10 blur-[120px] rounded-full animate-pulse-slow"></div>
        </div>

        <div class="container container-custom relative z-10">
            <div class="text-center mb-16">
                <h2 class="text-3xl md:text-4xl font-black text-white mb-4 tracking-tight">{t.background.focus_title}</h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {t.background.focus_items.map((item) => (
                    <div class="bg-white p-8 border border-gray-100 hover:shadow-2xl transition-all duration-500 group">
                        <div class="w-12 h-12 bg-blue-50 flex items-center justify-center text-blue-600 mb-6 group-hover:bg-blue-600 group-hover:text-white transition-all duration-300">
                            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <h3 class="text-xl font-bold text-gray-900 group-hover:text-blue-600 transition-colors">{item}</h3>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <!-- Ultra-Clean Vision & Mission -->
    <section class="py-24 bg-gray-50/50">
        <div class="container container-custom">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-px bg-gray-200 shadow-sm border border-gray-200">
                <!-- Vision Column -->
                <div class="bg-white p-12 md:p-16 flex flex-col justify-center">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight">
                        {t.vision.title}
                    </h2>
                    <div class="h-1 w-12 bg-blue-600 my-8"></div>
                    <p class="text-xl md:text-2xl text-gray-600 font-light italic leading-relaxed">
                        "{t.vision.description}"
                    </p>
                </div>
                
                <!-- Mission Column -->
                <div class="bg-white p-12 md:p-16">
                    <h2 class="text-3xl md:text-4xl font-bold text-gray-900 leading-tight mb-8">
                        {t.mission.title}
                    </h2>
                    <ul class="space-y-6">
                        {t.mission.items.map((item) => (
                            <li class="flex items-start gap-4 group">
                                <span class="w-2 h-2 rounded-none bg-blue-600 mt-2.5 flex-shrink-0 group-hover:scale-x-150 transition-transform origin-left"></span>
                                <p class="text-lg text-gray-600 leading-relaxed group-hover:text-gray-900 transition-colors">
                                    {item}
                                </p>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </div>
    </section>

    <!-- Objectives Section -->
    <section class="py-24 bg-white relative overflow-hidden">
        <div class="container container-custom relative z-10">
            <div class="text-center mb-16">
                <h3 class="text-4xl md:text-5xl font-black text-gray-900 tracking-tight">{t.objectives.title}</h3>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                {t.objectives.items.map((item, index) => (
                    <div class="objective-card group relative p-10 bg-gray-50 border border-gray-100 hover:bg-white hover:shadow-2xl transition-all duration-500" style={`animation-delay: ${index * 200}ms`}>
                        <!-- Number Circle -->
                        <div class="relative w-16 h-16 mb-8 flex items-center justify-center">
                            <div class="absolute inset-0 bg-blue-50 group-hover:bg-blue-600 transition-colors duration-500 rounded-none rotate-45 group-hover:rotate-90"></div>
                            <span class="relative text-2xl font-black text-blue-600 group-hover:text-white group-hover:scale-110 transition-transform">0{index + 1}</span>
                        </div>
                        
                        <p class="relative text-lg text-gray-700 group-hover:text-gray-900 transition-colors duration-300 leading-relaxed font-medium">
                            {item}
                        </p>
                        
                        <!-- Side decorator -->
                        <div class="absolute top-0 right-0 w-24 h-24 bg-blue-50/50 -z-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 rounded-bl-full"></div>
                    </div>
                ))}
            </div>
        </div>
    </section>

    <GlobalCTA />
</BaseLayout>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
    }
    
    .vision-reveal {
        opacity: 0;
        transform: scale(0.95);
        animation: scaleReveal 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .mission-pillar {
        opacity: 0;
        transform: translateY(40px);
        animation: cardReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .objective-card {
        opacity: 0;
        transform: translateY(30px);
        animation: cardReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes scaleReveal {
        from {
            opacity: 0;
            transform: scale(0.95);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @keyframes cardReveal {
        from {
            opacity: 0;
            transform: translateY(40px) scale(1);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    @keyframes pulse-slow {
        0%, 100% { opacity: 0.1; transform: scale(1); }
        50% { opacity: 0.2; transform: scale(1.1); }
    }

    @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .background-visual-reveal {
        opacity: 0;
        transform: translateX(-40px);
        animation: slideInLeft 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .background-text-reveal {
        opacity: 0;
        transform: translateX(40px);
        animation: slideInRight 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes slideInLeft {
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInRight {
        to { opacity: 1; transform: translateX(0); }
    }

    .animate-pulse-slow {
        animation: pulse-slow 8s ease-in-out infinite;
    }

    .animate-spin-slow {
        animation: spin-slow 12s linear infinite;
    }
</style>
