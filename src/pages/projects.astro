---
import BaseLayout from "../layouts/BaseLayout.astro";
import enProjects from "../i18n/en/projects.json";
import neProjects from "../i18n/ne/projects.json";
import GlobalCTA from "../components/common/GlobalCTA.astro";

const t = Astro.currentLocale === "ne" ? neProjects : enProjects;
---

<BaseLayout title={t.title}>
    <section class="py-24 bg-gray-50 min-h-screen">
        <div
            class="container container-custom text-center mb-16 animate-fade-in-up"
        >
            <span
                class="text-blue-600 font-bold uppercase tracking-wider text-sm bg-blue-50 px-3 py-1 mb-4 inline-block"
                >{t.subtitle}</span
            >
            <h1 class="text-4xl md:text-5xl font-extrabold mb-6 text-gray-900">
                {t.title}
            </h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto leading-relaxed">
                {t.desc}
            </p>
        </div>

        <div
            class="container container-custom grid grid-cols-1 md:grid-cols-2 gap-8"
        >
            {
                t.items.map((item, index) => (
                    <div class="bg-white p-8 shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 group">
                        <div class="flex justify-between items-start mb-6">
                            <span class="bg-blue-50 text-blue-700 text-xs font-bold px-3 py-1 uppercase tracking-wide border border-blue-100 group-hover:bg-blue-600 group-hover:text-white transition-colors">
                                {item.type}
                            </span>
                            <span
                                class={`text-xs font-bold px-3 py-1 uppercase tracking-wide border ${item.status.includes("Completed") || item.status.includes("सम्पन्न") ? "bg-green-50 text-green-700 border-green-100" : "bg-yellow-50 text-yellow-700 border-yellow-100"}`}
                            >
                                {item.status}
                            </span>
                        </div>
                        <h3 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors">
                            {item.title}
                        </h3>
                        <div class="flex items-center text-gray-500">
                            <svg
                                class="w-5 h-5 mr-2 text-gray-400"
                                fill="none"
                                stroke="currentColor"
                                viewBox="0 0 24 24"
                            >
                                <>
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                                    />
                                    <path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                                    />
                                </>
                            </svg>
                            <span class="font-medium">{item.location}</span>
                        </div>
                    </div>
                ))
            }
        </div>
    </section>
    <GlobalCTA />
</BaseLayout>
