---
import BaseLayout from "../../layouts/BaseLayout.astro";
import enGallery from "../../i18n/en/gallery.json";
import neGallery from "../../i18n/ne/gallery.json";
import GlobalCTA from "../../components/common/GlobalCTA.astro";
import fs from "node:fs";
import path from "node:path";

const currentLocale = Astro.currentLocale || "ne";
const t = currentLocale === "ne" ? neGallery : enGallery;

// Read images from public/Gallery
const galleryDir = path.join(process.cwd(), "public", "Gallery");
const images = fs
    .readdirSync(galleryDir)
    .filter((file: string) => /\.(jpg|jpeg|png|webp|gif)$/i.test(file))
    .map((file: string) => `/Gallery/${file}`);
---

<BaseLayout title={t.title}>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 to-white py-24 md:py-32">
        <div class="container container-custom">
            <div class="max-w-4xl mx-auto text-center animate-fade-in-up">
                <span
                    class="text-blue-600 font-bold uppercase tracking-wider mb-4 block text-sm bg-blue-50 inline-block px-4 py-1"
                >
                    {t.subtitle}
                </span>
                <h1
                    class="text-4xl md:text-5xl lg:text-7xl font-extrabold mb-8 text-gray-900 leading-tight"
                >
                    {t.title}
                </h1>
                <p
                    class="text-xl md:text-2xl text-gray-600 leading-relaxed font-light max-w-3xl mx-auto"
                >
                    {t.description}
                </p>
                <div class="h-1.5 w-24 bg-blue-600 mx-auto mt-8"></div>
            </div>
        </div>
    </section>

    <!-- Gallery Grid -->
    <section class="py-24 bg-white">
        <div class="container container-custom">
            <div
                class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4"
            >
                {
                    images.map((image: string, index: number) => (
                        <div
                            class="group relative overflow-hidden rounded-xl bg-white aspect-square cursor-pointer shadow-sm hover:shadow-xl transition-all duration-500 animate-fade-in-up border-4 border-gray-50 hover:border-blue-100"
                            style={`animation-delay: ${index * 30}ms`}
                            data-gallery-item
                            data-index={index}
                            data-image={image}
                        >
                            <img
                                src={image}
                                alt={`Gallery image ${index + 1}`}
                                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                loading="lazy"
                            />
                            <div class="absolute inset-0 bg-white/20 opacity-0 group-hover:opacity-100 transition-all duration-500 flex items-center justify-center">
                                <div class="w-12 h-12 rounded-full bg-white/80 flex items-center justify-center scale-90 group-hover:scale-100 transition-transform duration-500 shadow-xl">
                                    <svg
                                        class="w-6 h-6 text-blue-600"
                                        fill="none"
                                        stroke="currentColor"
                                        viewBox="0 0 24 24"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2.5"
                                            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"
                                        />
                                    </svg>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <!-- Lightbox Modal -->
    <div
        id="lightbox"
        class="fixed inset-0 z-[100] bg-black/70 backdrop-blur-2xl opacity-0 pointer-events-none transition-all duration-500 flex items-center justify-center p-4"
    >
        <!-- Close Button -->
        <button
            id="close-lightbox"
            class="absolute top-6 right-6 text-white/70 hover:text-white transition-all z-[130] p-2 bg-white/10 hover:bg-white/20 rounded-full backdrop-blur-md border border-white/20"
            aria-label="Close"
        >
            <svg
                class="w-6 h-6 md:w-8 md:h-8"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
            >
                <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M6 18L18 6M6 6l12 12"></path>
            </svg>
        </button>

        <!-- Navigation Arrows Container -->
        <div
            class="absolute inset-0 flex items-center justify-between px-4 md:px-8 pointer-events-none z-[140]"
        >
            <button
                id="prev-image"
                class="pointer-events-auto group w-14 h-14 md:w-20 md:h-20 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 border-2 border-white/50 text-white shadow-[0_0_30px_rgba(0,0,0,0.3)] backdrop-blur-sm transition-all duration-300 hover:scale-110 active:scale-95"
                aria-label="Previous"
            >
                <svg
                    class="w-8 h-8 md:w-10 md:h-10 transition-transform group-hover:-translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="3"
                        d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>

            <button
                id="next-image"
                class="pointer-events-auto group w-14 h-14 md:w-20 md:h-20 flex items-center justify-center rounded-full bg-white/20 hover:bg-white/30 border-2 border-white/50 text-white shadow-[0_0_30px_rgba(0,0,0,0.3)] backdrop-blur-sm transition-all duration-300 hover:scale-110 active:scale-95"
                aria-label="Next"
            >
                <svg
                    class="w-8 h-8 md:w-10 md:h-10 transition-transform group-hover:translate-x-1"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="3"
                        d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>

        <!-- Image Container -->
        <div
            class="relative w-full h-full flex items-center justify-center p-4 md:p-12"
        >
            <div
                class="relative group max-w-full max-h-full flex items-center justify-center"
            >
                <img
                    id="lightbox-img"
                    src=""
                    alt="Full size preview"
                    class="max-w-full max-h-[85vh] w-auto h-auto object-contain shadow-[0_0_50px_rgba(0,0,0,0.5)] scale-95 transition-all duration-500 border-[10px] border-white/10 rounded-lg pointer-events-auto"
                />
            </div>
        </div>
    </div>

    <GlobalCTA />
</BaseLayout>

<script define:vars={{ images }}>
    const lightbox = document.getElementById("lightbox");
    const lightboxImg = document.getElementById("lightbox-img");
    const closeBtn = document.getElementById("close-lightbox");
    const prevBtn = document.getElementById("prev-image");
    const nextBtn = document.getElementById("next-image");
    const galleryItems = document.querySelectorAll("[data-gallery-item]");

    let currentIndex = 0;

    const updateLightbox = (index) => {
        if (lightboxImg && images[index]) {
            lightboxImg.style.opacity = "0";
            lightboxImg.style.transform = "scale(0.98) translateY(10px)";
            setTimeout(() => {
                lightboxImg.src = images[index];
                lightboxImg.onload = () => {
                    lightboxImg.style.opacity = "1";
                    lightboxImg.style.transform = "scale(1) translateY(0)";
                };
                currentIndex = index;
            }, 200);
        }
    };

    galleryItems.forEach((item) => {
        item.addEventListener("click", () => {
            const index = parseInt(item.getAttribute("data-index") || "0");
            if (lightbox && lightboxImg) {
                currentIndex = index;
                lightboxImg.src = images[currentIndex];
                lightbox.classList.remove("opacity-0", "pointer-events-none");

                setTimeout(() => {
                    lightboxImg.classList.remove("scale-95");
                    lightboxImg.classList.add("scale-100");
                }, 50);

                document.body.style.overflow = "hidden";
            }
        });
    });

    const closeLightbox = () => {
        if (lightbox && lightboxImg) {
            lightboxImg.classList.remove("scale-100");
            lightboxImg.classList.add("scale-95");
            setTimeout(() => {
                lightbox.classList.add("opacity-0", "pointer-events-none");
                lightboxImg.src = "";
                document.body.style.overflow = "";
            }, 300);
        }
    };

    prevBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        const newIndex = (currentIndex - 1 + images.length) % images.length;
        updateLightbox(newIndex);
    });

    nextBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        const newIndex = (currentIndex + 1) % images.length;
        updateLightbox(newIndex);
    });

    closeBtn?.addEventListener("click", closeLightbox);
    lightbox?.addEventListener("click", (e) => {
        if (e.target === lightbox || e.target.id === "lightbox-img-container")
            closeLightbox();
    });

    // Keyboard navigation
    document.addEventListener("keydown", (e) => {
        if (lightbox?.classList.contains("pointer-events-none")) return;

        if (e.key === "Escape") closeLightbox();
        if (e.key === "ArrowLeft") prevBtn?.click();
        if (e.key === "ArrowRight") nextBtn?.click();
    });
</script>

<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        opacity: 0;
        transform: translateY(20px);
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    #lightbox-img {
        transition:
            opacity 0.4s cubic-bezier(0.4, 0, 0.2, 1),
            transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
        will-change: opacity, transform;
    }

    button {
        -webkit-tap-highlight-color: transparent;
    }
</style>
