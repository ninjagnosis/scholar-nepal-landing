---
import BaseLayout from "../../layouts/BaseLayout.astro";
import enServices from "../../i18n/en/services.json";
import neServices from "../../i18n/ne/services.json";
import GlobalCTA from "../../components/common/GlobalCTA.astro";

const t = neServices; // Explicitly Nepali for this route
---

<BaseLayout title={t.title}>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-blue-50 to-white py-24 md:py-32">
        <div class="container container-custom">
            <div class="max-w-4xl mx-auto text-center animate-fade-in-up">
                <span class="text-blue-600 font-bold uppercase tracking-wider mb-4 block text-sm bg-blue-50 inline-block px-4 py-1">
                    {t.subtitle}
                </span>
                <h1 class="text-4xl md:text-5xl lg:text-7xl font-extrabold mb-8 text-gray-900 leading-tight">
                    {t.title}
                </h1>
                <p class="text-xl md:text-2xl text-gray-600 leading-relaxed font-light max-w-3xl mx-auto">
                    {t.description}
                </p>
                <div class="h-1.5 w-24 bg-blue-600 mx-auto mt-8"></div>
            </div>
        </div>
    </section>

    <!-- Content Section -->
    <section class="py-24 bg-white">
        <div class="container container-custom">
            <div class="text-center max-w-4xl mx-auto mb-20">
                <h3 class="text-4xl md:text-5xl font-bold text-gray-900 mb-8">{t.sectors.title}</h3>
            </div>

            <div class="space-y-12">
                {t.sectors.items.map((sector) => (
                    <div class="bg-gray-50 border border-gray-100 p-8 md:p-12 hover:bg-white hover:shadow-2xl transition-all duration-500 group">
                        <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 items-start">
                            <div class="lg:col-span-4">
                                <h4 class="text-2xl font-black text-gray-900 tracking-tight leading-tight mb-4">{sector.title}</h4>
                            </div>
                            <div class="lg:col-span-8">
                                <div class="text-gray-600 text-lg leading-relaxed whitespace-pre-line border-l-4 border-gray-200 pl-8 group-hover:border-blue-600 transition-colors text-justify">
                                    {sector.content}
                                </div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    <GlobalCTA />
</BaseLayout>
