---
import enHome from "../../i18n/en/home.json";
import neHome from "../../i18n/ne/home.json";

const t =
    Astro.currentLocale === "ne" ? neHome.about_brief : enHome.about_brief;
const yearsExp = Astro.currentLocale === "ne" ? "१०+" : "10+";
const expLabel =
    Astro.currentLocale === "ne" ? "अनुभवका वर्षहरू" : "Years of Experience";
const readMore = Astro.currentLocale === "ne" ? "थप पढ्नुहोस्" : "Read More";
---

<section id="about-brief" class="py-24 bg-white overflow-hidden relative">
    <!-- Background element -->
    <div class="absolute left-0 top-1/2 -translate-y-1/2 w-64 h-64 bg-blue-50/50 rounded-full blur-3xl -z-10 animate-pulse-slow"></div>

    <div
        class="container container-custom flex flex-col lg:flex-row gap-20 items-center"
    >
        <div class="lg:w-1/2 relative order-2 lg:order-1 about-image-reveal">
            <div class="relative z-10">
                <div class="relative group">
                    <img
                        src="https://images.unsplash.com/photo-1552664730-d307ca884978?q=80&w=2670&auto=format&fit=crop"
                        class="shadow-2xl transition-all duration-700 group-hover:grayscale-0 grayscale-[20%]"
                        alt="Team meeting"
                    />
                    <div class="absolute inset-0 border-2 border-blue-600/20 -m-4 -z-10 group-hover:m-0 transition-all duration-500"></div>
                </div>

                <div
                    class="absolute -bottom-10 -right-10 bg-gray-900 text-white p-10 shadow-2xl z-20"
                >
                    <div class="relative">
                        <p class="text-5xl md:text-6xl font-black mb-2 text-blue-500">
                            {yearsExp}
                        </p>
                        <p
                            class="text-xs md:text-sm uppercase tracking-[0.2em] font-bold text-gray-400"
                        >
                            {expLabel}
                        </p>
                        <!-- Decorative line -->
                        <div class="absolute -left-10 top-1/2 w-8 h-px bg-blue-600 hidden md:block"></div>
                    </div>
                </div>
                
                <!-- Floating geometric elements -->
                <div class="absolute -top-6 -left-6 w-24 h-24 bg-blue-600/10 -z-10 animate-spin-slow"></div>
            </div>
        </div>

        <div class="lg:w-1/2 order-1 lg:order-2 about-text-reveal">
            <div class="max-w-xl">
                <div
                    class="inline-flex items-center gap-3 mb-6"
                >
                    <div class="h-px w-8 bg-blue-600"></div>
                    <span class="text-blue-600 text-sm font-black uppercase tracking-widest">{t.title}</span>
                </div>
                <h3
                    class="text-4xl md:text-5xl font-black text-gray-900 mb-8 leading-[1.2] tracking-tight"
                >
                    {
                        Astro.currentLocale === "ne"
                            ? "अनुसन्धान र नवीनता मार्फत विकास सशक्तीकरण"
                            : "Empowering Development through Research & Innovation"
                    }
                </h3>
                
                <div class="space-y-6 mb-10">
                    <p class="text-gray-600 text-lg leading-relaxed first-letter:text-4xl first-letter:font-black first-letter:text-blue-600 first-letter:mr-2 first-letter:float-left">
                        {t.content}
                    </p>
                </div>

                <a
                    href="about"
                    class="group inline-flex items-center gap-4 text-gray-900 font-black uppercase tracking-widest hover:text-blue-600 transition-colors py-4 border-b-2 border-gray-900 hover:border-blue-600"
                >
                    {readMore}
                    <svg
                        class="w-5 h-5 transform group-hover:translate-x-2 transition-transform"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="3"
                            d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg
                    >
                </a>
            </div>
        </div>
    </div>
</section>

<style>
    .about-image-reveal {
        opacity: 0;
        transform: translateX(-50px);
        animation: slideInLeft 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    .about-text-reveal {
        opacity: 0;
        transform: translateX(50px);
        animation: slideInRight 1s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }

    @keyframes slideInLeft {
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes slideInRight {
        to { opacity: 1; transform: translateX(0); }
    }

    @keyframes pulse-slow {
        0%, 100% { opacity: 0.3; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(1.1); }
    }

    @keyframes spin-slow {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }

    .animate-pulse-slow {
        animation: pulse-slow 10s ease-in-out infinite;
    }

    .animate-spin-slow {
        animation: spin-slow 20s linear infinite;
    }
</style>
