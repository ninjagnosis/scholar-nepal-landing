---
import enHome from "../../i18n/en/home.json";
import neHome from "../../i18n/ne/home.json";

const t =
    Astro.currentLocale === "ne"
        ? neHome.services_brief
        : enHome.services_brief;

// Icons for services
const icons = [
    `<svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" /></svg>`,
    `<svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" /></svg>`,
    `<svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
    `<svg class="w-10 h-10" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" /></svg>`,
];

const viewAllLabel = Astro.currentLocale === "ne" ? "सबै सेवाहरू हेर्नुहोस्" : "View All Services";
const servicesUrl = Astro.currentLocale === "ne" ? "/ne/services" : "/services";
---

<section id="services" class="py-20 bg-gray-900 text-white relative overflow-hidden">
    <div class="container container-custom relative z-10">
        <div class="max-w-3xl mb-12">
            <span class="text-blue-500 font-bold uppercase tracking-widest mb-2 block text-sm">{Astro.currentLocale === 'ne' ? 'हाम्रा सेवाहरू' : 'Our Specialized Services'}</span>
            <h2 class="text-3xl md:text-4xl font-bold tracking-tight text-white">
                {t.title}
            </h2>
            <div class="h-1 w-16 bg-blue-600 mt-4"></div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            {
                t.items.map((item, index) => (
                    <div class="group bg-gray-800 p-8 hover:shadow-2xl transition-all duration-300 border border-gray-700 hover:bg-gray-800/50 hover:-translate-y-1 service-card-reveal" style={`animation-delay: ${index * 100}ms`}>
                        <div class="text-blue-500 mb-6 transform group-hover:scale-110 transition-transform duration-300 inline-block">
                            <div set:html={icons[index % icons.length]} />
                        </div>
                        <h3 class="text-xl font-bold mb-4 text-white group-hover:text-blue-400 transition-colors leading-tight">
                            {item.title}
                        </h3>
                        <p class="text-gray-400 text-sm leading-relaxed font-light">
                            {item.description}
                        </p>
                    </div>
                ))
            }
        </div>

        <div class="text-center mt-12">
            <a 
                href={servicesUrl} 
                class="group inline-flex items-center gap-3 text-white font-black uppercase tracking-widest hover:text-blue-400 transition-colors"
            >
                {viewAllLabel}
                <svg class="w-5 h-5 transform group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
            </a>
        </div>
    </div>
</section>

<style>
    .service-card-reveal {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 0.6s ease-out forwards;
    }

    @keyframes fadeInUp {
        to { opacity: 1; transform: translateY(0); }
    }
</style>
