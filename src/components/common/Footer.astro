---
import { getRelativeLocaleUrl } from "astro:i18n";
import enCommon from "../../i18n/en/common.json";
import neCommon from "../../i18n/ne/common.json";

const currentLocale = Astro.currentLocale || "en";
const t = currentLocale === "ne" ? neCommon : enCommon;
---

<footer class="bg-gray-900 border-t border-gray-800 text-gray-300 py-12">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Company Info -->
            <div class="col-span-1 md:col-span-2">
                <a
                    href={getRelativeLocaleUrl(currentLocale, "")}
                    class="text-white text-xl font-bold mb-4 flex items-center gap-2 hover:text-blue-400 transition-colors"
                >
                    <img
                        src="/scholar-nepal-pvt-ltd.jpg"
                        alt="Scholar Nepal Logo"
                        class="w-10 h-10 object-contain"
                    />
                    Scholar Nepal
                </a>
                <p class="text-gray-400 mb-6 max-w-sm leading-relaxed">
                    {t.footer.company_desc}
                </p>
                <div class="flex space-x-4">
                    <!-- Social Icons (Placeholder) -->
                    <a
                        href="https://www.facebook.com/9851160155nepal?mibextid=rS40aB7S9Ucbxw6v"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="text-gray-400 hover:text-white transition-colors duration-200"
                    >
                        <span class="sr-only">Facebook</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.791-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
                            ></path></svg
                        >
                    </a>
                    <a
                        href="#"
                        class="text-gray-400 hover:text-white transition-colors duration-200"
                    >
                        <span class="sr-only">LinkedIn</span>
                        <svg
                            class="h-6 w-6"
                            fill="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                            ></path></svg
                        >
                    </a>
                </div>
            </div>

            <!-- Links -->
            <div>
                <h4
                    class="text-white font-semibold mb-4 uppercase tracking-wider text-sm"
                >
                    {t.footer.links_title}
                </h4>
                <ul class="space-y-2">
                    <li>
                        <a
                            href={getRelativeLocaleUrl(currentLocale, "about")}
                            class="hover:text-blue-400 transition-colors duration-200"
                            >{t.nav.about}</a
                        >
                    </li>
                    <li>
                        <a
                            href={getRelativeLocaleUrl(
                                currentLocale,
                                "services",
                            )}
                            class="hover:text-blue-400 transition-colors duration-200"
                            >{t.nav.services}</a
                        >
                    </li>
                    <li>
                        <a
                            href={getRelativeLocaleUrl(
                                currentLocale,
                                "projects",
                            )}
                            class="hover:text-blue-400 transition-colors duration-200"
                            >{t.nav.projects}</a
                        >
                    </li>
                    <li>
                        <a
                            href={getRelativeLocaleUrl(
                                currentLocale,
                                "gallery",
                            )}
                            class="hover:text-blue-400 transition-colors duration-200"
                            >{t.nav.gallery}</a
                        >
                    </li>
                    <li>
                        <a
                            href={getRelativeLocaleUrl(
                                currentLocale,
                                "contact",
                            )}
                            class="hover:text-blue-400 transition-colors duration-200"
                            >{t.nav.contact}</a
                        >
                    </li>
                </ul>
            </div>

            <!-- Contact -->
            <div>
                <h4
                    class="text-white font-semibold mb-4 uppercase tracking-wider text-sm"
                >
                    {t.footer.contact_title}
                </h4>
                <ul class="space-y-2 text-sm text-gray-400">
                    <li class="flex items-start gap-2">
                        <svg
                            class="w-5 h-5 text-gray-500 mt-0.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
                            ></path></svg
                        >
                        <span>{t.footer.address}</span>
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-5 h-5 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path></svg
                        >
                        <a
                            href={`mailto:${t.footer.email}`}
                            class="hover:text-white transition-colors"
                            >{t.footer.email}</a
                        >
                    </li>
                    <li class="flex items-center gap-2">
                        <svg
                            class="w-5 h-5 text-gray-500"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path></svg
                        >
                        <a
                            href={`tel:${t.footer.phone}`}
                            class="hover:text-white transition-colors"
                            >{t.footer.phone}</a
                        >
                    </li>
                </ul>
            </div>
        </div>

        <div
            class="border-t border-gray-800 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500 gap-4"
        >
            <p>{t.footer.copyright}</p>
            <div class="flex items-center gap-4">
                <a
                    href={getRelativeLocaleUrl(currentLocale, "privacy-policy")}
                    class="hover:text-white transition-colors duration-200"
                    >{t.footer.privacy_policy}</a
                >
                <span class="text-gray-700">|</span>
                <a
                    href={getRelativeLocaleUrl(
                        currentLocale,
                        "terms-of-service",
                    )}
                    class="hover:text-white transition-colors duration-200"
                    >{t.footer.terms_of_service}</a
                >
            </div>
        </div>
    </div>
</footer>
