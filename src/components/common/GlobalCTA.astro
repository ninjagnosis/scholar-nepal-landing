---
import { getRelativeLocaleUrl } from "astro:i18n";
import enCommon from "../../i18n/en/common.json";
import neCommon from "../../i18n/ne/common.json";

const currentLocale = Astro.currentLocale || "en";
const t = currentLocale === "ne" ? neCommon : enCommon;
const contactUrl = getRelativeLocaleUrl(currentLocale, "contact");
---

<section class="bg-blue-900 py-16 text-white relative overflow-hidden">
    <div
        class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"
    >
    </div>
    <div class="container container-custom text-center relative z-10">
        <h2 class="text-3xl font-bold mb-6">{t.cta.title}</h2>
        <p class="text-blue-100 mb-8 max-w-2xl mx-auto">
            {t.cta.description}
        </p>
        <a
            href={contactUrl}
            class="inline-block bg-white text-blue-900 font-bold py-3 px-8 shadow-lg hover:bg-gray-100 transition-colors"
        >
            {t.cta.button}
        </a>
    </div>
</section>
