---
// Footer component with translations
import { getTranslations, type Locale } from '../i18n/utils';

interface Props {
  locale?: Locale;
}

const { locale = 'en' } = Astro.props;
const t = getTranslations(locale);
const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container">
    <div class="footer-content">
      <div class="footer-section">
        <h3 class="footer-logo">{t.footer.logo}</h3>
        <p class="footer-description">
          {t.footer.about}
        </p>
      </div>
      
      <div class="footer-section">
        <h4>{t.footer.quickLinks.title}</h4>
        <ul class="footer-links">
          <li><a href="/">{t.footer.quickLinks.home}</a></li>
          <li><a href="/about">{t.footer.quickLinks.about}</a></li>
          <li><a href="/#services">{t.footer.quickLinks.services}</a></li>
          <li><a href="/contact">{t.footer.quickLinks.contact}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>{t.footer.contact.title}</h4>
        <ul class="footer-links">
          <li>{t.footer.contact.email}</li>
          <li>{t.footer.contact.phone}</li>
          <li>{t.footer.contact.location}</li>
          <li>{t.footer.contact.reg}</li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h4>{t.footer.social.title}</h4>
        <div class="social-links">
          <a href="#" aria-label="Facebook" class="social-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a href="#" aria-label="Twitter" class="social-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
            </svg>
          </a>
          <a href="#" aria-label="LinkedIn" class="social-link">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>&copy; {currentYear} {t.footer.copyright}</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(135deg, var(--bg-dark) 0%, #1e293b 100%);
    color: var(--text-light);
    padding: var(--spacing-2xl) 0 var(--spacing-md);
    margin-top: var(--spacing-2xl);
  }
  
  .footer-content {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-xl);
    margin-bottom: var(--spacing-xl);
  }
  
  .footer-section h3,
  .footer-section h4 {
    margin-bottom: var(--spacing-md);
    font-size: var(--font-size-lg);
  }
  
  .footer-logo {
    background: linear-gradient(135deg, var(--primary-light) 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: var(--font-size-2xl);
  }
  
  .footer-description {
    color: #94a3b8;
    line-height: 1.6;
  }
  
  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-sm);
  }
  
  .footer-links a {
    color: #94a3b8;
    transition: var(--transition);
  }
  
  .footer-links a:hover {
    color: var(--primary-light);
    padding-left: var(--spacing-xs);
  }
  
  .footer-links li {
    color: #94a3b8;
  }
  
  .social-links {
    display: flex;
    gap: var(--spacing-md);
  }
  
  .social-link {
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.1);
    border-radius: var(--radius-md);
    color: var(--text-light);
    transition: var(--transition);
  }
  
  .social-link:hover {
    background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
    transform: translateY(-3px);
    color: var(--text-light);
  }
  
  .footer-bottom {
    padding-top: var(--spacing-lg);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    text-align: center;
    color: #94a3b8;
  }
  
  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      gap: var(--spacing-lg);
    }
  }
</style>
