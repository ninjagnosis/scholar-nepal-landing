---
import "../styles/global.css";
import Header from "../components/common/Header.astro";
import Footer from "../components/common/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
const currentLocale = Astro.currentLocale || "en";
---

<!doctype html>
<html lang={currentLocale} class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Scholar Nepal - Research, Planning and Development Consulting"
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/jpeg" href="/scholar-nepal-pvt-ltd.jpg" />
        <meta name="generator" content={Astro.generator} />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&family=Source+Serif+4:ital,opsz,wght@0,8..60,300..900;1,8..60,300..900&display=swap" rel="stylesheet">
        <title>{title} | Scholar Nepal</title>
    </head>
    <body class="flex flex-col min-h-screen">
        <Header />
        <main class="flex-grow">
            <slot />
        </main>
        <Footer />
    </body>
</html>
